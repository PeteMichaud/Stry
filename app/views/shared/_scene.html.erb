<%= add_button :scene %>
<li class="scene" data-scene-id="<%= scene.id %>" id="scene-<%= scene.id %>">
  <a class="delete-scene-btn" href="#" title="Delete Scene">&times;</a>
  <textarea class="scene-title" name='scene[title]'
         data-post-url='<%= scene_path(scene) %>'
         data-dirty='<%= scene.title %>'
         placeholder="Enter Scene Title..."><%= scene.title %></textarea>
<%
  #<div class="intensity">
  #    (<%= scene.narrative_intensity >, <%= scene.gameplay_intensity >)
  #</div>
%>
    <div class="scene-purpose">Scene Purpose</div>
    <textarea class="scene-notes" name='scene[notes]'
        data-post-url='<%= scene_path(scene) %>'
        data-dirty="<%= scene.notes %>"
        placeholder="Add Scene Notes..."><%= scene.notes %></textarea>

    <ul class="scene-block-list">
      <% scene.blocks.each do |block| %>
          <%= render :partial => 'shared/block', :locals => { :block => block } %>
      <% end %>
      <%= add_button :block %>
    </ul>
</li>