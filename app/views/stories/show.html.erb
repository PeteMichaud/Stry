<div id="story-header">
  <textarea id="story-title" name='story[title]'
            data-post-url='<%= story_path(@story) %>'
            data-dirty="<%= @story.title %>"
            placeholder="Enter Story Title..."><%= @story.title %></textarea>

    <textarea class="story-description" name='story[description]'
              data-post-url='<%= story_path(@story) %>'
              data-dirty="<%= @story.description %>"
              placeholder="Add Story Description..."><%= @story.description %></textarea>

    <%= @story.table_of_contents %>
</div>

<ul id="story-scene-list" data-story-id="<%= @story.id %>">
  <% @story.scenes.each do |scene| %>
    <%= render :partial => 'shared/scene', :locals => { :scene => scene } %>
  <% end %>
  <%= add_button :scene %>
</ul>

<%= render :partial => 'shared/attachment_modal' %>
<%= render :partial => 'shared/picture_modal' %>
